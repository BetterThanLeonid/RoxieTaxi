<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.App.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:contentPadding="@dimen/card_content_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="@string/text_start_address"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/startAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="@color/gray"
            tools:text="Санкт-Петербург, г. Петергоф, проспект Новоизмайловский 16к3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:ellipsize="middle"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="@string/text_end_address"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/endAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="@color/gray"
            tools:text="Санкт-Петербург, г. Петергоф, проспект Новоизмайловский 16к3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/drawable_padding"
                android:gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                app:drawableStartCompat="@drawable/ic_round_access_time_24"
                tools:text="22/12/2021" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/drawable_padding"
                android:gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                app:drawableStartCompat="@drawable/ic_outline_paid_24"
                tools:text="100.10 RUB" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>